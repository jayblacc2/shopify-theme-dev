<div class="relative bg-gray-50 border-2 border-transparent border-b-black" x-data="{ mobileMenuOpen: false, open: false, openSearch: false }">
  <div class="mx-auto px-4 sm:px-6">
    <div class="flex justify-between items-center py-6 md:justify-start md:space-x-10">
      <!-- STORE NAME / STORE LOGO -->
      <div class="flex justify-start lg:flex-1 truncate">
        {% render 'store-icon' %}
        <h1 class="text-xl font-bold truncate hidden sm:block">
          {{ shop.name }}</h1>
      </div>
      <div @click="mobileMenuOpen = !mobileMenuOpen" class="-mr-2 -my-2 ml-3 md:hidden">
        <button type="button" class="bg-white p-2 inline-flex items-center justify-center focus:outline-none">
          {% render 'mobile-menu-icon' %}
        </button>
      </div>
      <!-- NAVIGATION MENU -->
      <nav @click.away="open=false" class="hidden md:flex space-x-10">
        {% for link in linklists.main-menu.links %}
          {% if link.links != blank %}
            <div class="relative">
              <button
                @click="open = !open"
                type="button"
                class="inline-flex items-center text-base text-gray-500 hover:text-gray-900">
                {{ link.title }}
                {% render 'dropdown-icon' %}
              </button>
              {% comment %} submenu list {% endcomment %}
              <div
                x-show="open"
                x-cloak
                x-transition:enter="transition ease-out duration-100"
                x-transition:enter-start="transform opacity-0 scale-95"
                x-transition:enter-end="transform opacity-100 scale-100"
                x-transition:leave="transition ease-in duration-75"
                x-transition:leave-start="transform opacity-100 scale-100"
                x-transition:leave-end="transform opacity-0 scale-95"
                class="absolute z-10 -ml-5 mt-5 transform px-2 w-screen max-w-md sm:px-0 lg:ml-0 lg:left-1/2 lg:-translate-x-1/2">
                <div class="shadow-lg border ring-black ring-opacity-5 overflow-hidden rounded-lg">
                  <div class="relative grid gap-6 bg-white px-2 py-2 sm:gap-4 sm:p-4">
                    <!-- CREATE THE SUBLINK -->
                    {% for link in link.links %}
                      <a href="{{link.url}}" class="-m-3 p-3 flex items start rounded-lg hover:bg-gray-100">
                        <div class="ml-4">
                          <p class="text-gray-900 text-base font-medium">
                            {{ link.title }}
                          </p>
                        </div>
                      </a>
                    {% endfor %}
                  </div>
                </div>
              </div>
            </div>
          {% else %}
            <div class="relative">
              <a href="{{link.url}}" class="text-base text-gray-500 hover:text-gray-900 {% if link.active == true %}text-red-400{% endif %}">{{ link.title }}</a>
            </div>
          {% endif %}
        {% endfor %}
      </nav>
      <div class="hidden md:flex items-center justify-end md:flex-1 space-x-5">
        <button
          x-on:click="openSearch = !openSearch"
          type="button"
          class="whitespace-nowrap text-base text-gray-500 hover:text-gray-900  cursor-pointer">
          {% render 'icon-search' %}
        </button>

        <a href="{{routes.cart_url}}" class="whitespace-nowrap text-base text-gray-500 hover:text-gray-900">
          {% render 'cart-icon' %}
        </a>
        {% if shop.customer_accounts_enabled %}
          {% if customer %}
            <a href="{{routes.account_url}}" class="text-base text-gray-500 hover:text-gray-900">Account</a>
            {{ 'Log out' | customer_logout_link | replace: 'Log out', 'Log Out' }}
          {% else %}
            <a href="{{routes.account_login_url}}" class="text-base text-gray-500 hover:text-gray-900">Login</a>
            <a href="{{routes.account_register_url}}" class="text-base text-gray-500 hover:text-gray-900">Register</a>
          {% endif %}
        {% endif %}
      </div>
    </div>
  </div>
  <div x-show="mobileMenuOpen" class="absolute z-10 top-0 inset-x-0 p-2 transform origin-top-left md:hidden">
    <div class="shadow-lg rounded-lg ring-1 ring-black ring-opacity-5 bg-white w-full">
      <div class="p-5 divide-y-2 divide-gray-50">

        <!-- MOBILE MENU HEADER TITLE PLUS CLOSE BUTTON -->
        <div class="flex items-center justify-between pb-3">
          <div>
            <h1 class="text-lg text-gray-500">MENU</h1>
          </div>
          <div class="-mr-2">
            <button
              @click="mobileMenuOpen=false"
              type="button"
              class="bg-white rounded-md p-2 text-gray-500 hover:text-gray-900">
              {% render 'close-icon' %}
            </button>
          </div>
        </div>
        <!-- NAVIGATION LINKS FOR MOBILE MENU -->
        <div class="pt-3">
          <nav class="grid gap-y-7">
            {% for link in linklists.main-menu.links %}
              {% if link.links != blank %}
                <div class="relative">
                  <button
                    @click="open = !open"
                    type="button"
                    class="text-base text-gray-500 hover:text-gray-900 flex items-center justify-between w-full">
                    <div>{{ link.title }}</div>
                    {% render 'dropdown-icon' %}
                  </button>
                  {% for childlink in link.links %}
                    <div class="grid gap-y-7 py-3" x-show="open">
                      <a href="#" class="-m-3 p-3 mt-2 flex items-center rounded-md text-gray-500 hover:text-gray-900 hover:bg-gray-50">
                        <span class="ml-3 text-base font-medium text-gray-500">{{ childlink.title }}</span>
                      </a>
                    </div>
                  {% endfor %}
                </div>
              {% else %}
                <a href="{{link.url}}" class="-m-3 p-3 flex items-center rounded-md text-gray-500 hover:text-gray-900 hover:bg-gray-50">
                  {{ link.title }}
                </a>
              {% endif %}
            {% endfor %}
          </nav>
        </div>
      </div>
    </div>
  </div>
  <div x-show="openSearch" class="w-full absolute top-0 bg-white border-2 border-gray-200 shadow-2xl rounded-lg transition-all duration-300 ease-in-out transform">
    <div class="max-w-6xl mx-auto px-3 py-4 backdrop-blur-sm">
      <div class="flex items-center justify-between">
        <button @click="openSearch = false" class="p-2 hover:bg-gray-100 rounded-full">
          {% render 'close-icon' %}
        </button>
        <form
          action="{{ routes.search_url }}"
          method="get"
          class="flex-1 mx-4">
          <div class="relative">
            <input
              type="text"
              name="q"
              placeholder="Search products..."
              class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-gray-200">
            <button type="submit" class="absolute right-3 top-1/2 -translate-y-1/2 md:mr-20">
              {% render 'icon-search' %}
            </button>
          </div>
        </form>
      </div>
    </div>
  </div>

</div>


{% schema %}
  {
    "name": "Header",
    "settings": [
      {
        "type": "text",
        "id": "mobile_menu_title",
        "label": "Title",
        "default": "Menu",
        "info": "This title is the mobile menu"
      }
    ]
  }
{% endschema %}