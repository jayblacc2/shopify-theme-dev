<div class="max-w-md">
  <div class="text-5xl font-bold my-4">
    {{ section.settings.title }}
  </div>
  <div class="my-4">
    <p class="text-base md:text-xl leading-normal">
      {{ section.settings.subtext_title }}
    </p>
  </div>
  <div class="my-4">
    {% if section.settings.button_url == blank %}
      {% assign shop_url = shop.secure_url %}
    {% else %}
      {% assign shop_url = section.settings.button_url %}
    {% endif %}
    <a href="{{"shop_url"}}" class="text-base md:text-xl leading-normal bg-black text-white py-2 px-4 rounded hover:bg-gray-800 transition-colors duration-200 cursor-pointer">{{ section.settings.button_text }}</a>
  </div>
</div>


{% schema %}
  {
    "name": "Template 404",
    "tag": "section",
    "class": "flex justify-center items-center text-center flex-col py-7 h-screen",
    "settings": [
      {
        "label": "404 heading title",
        "type": "text",
        "id": "title",
        "default": "404"
      },
      {
        "type": "text",
        "id": "subtext_title",
        "label": "404 sub title",
        "default": "This page you are looking for does not exist."
      },
      {
        "type": "text",
        "id": "button_text",
        "label": "404 button text",
        "default": "Back to home"
      },
      {
        "type": "url",
        "id": "button_url",
        "label": "Button Url"

      }
    ]
  }
{% endschema %}