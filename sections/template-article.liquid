<article
  class="py-8 lg:py-12"
  itemscope
  itemtype="https://schema.org/BlogPosting">
  {% for block in section.blocks %}
    {% case block.type %}
      {% when 'article_title' %}
        <div class="flex justify-center items-center mb-8">
          <div class="max-w-4xl text-center px-4">
            <a href="{{blog.url}}" class="inline-block text-sm uppercase text-blue-600 font-semibold hover:text-blue-800 transition-colors duration-200 mb-4 tracking-wider">{{ blog.title }}</a>
            <h1 class="text-3xl md:text-5xl lg:text-6xl font-bold text-gray-900 leading-tight" itemprop="headline">{{ article.title }}</h1>
          </div>
        </div>
      {% when 'article_author' %}
        <div
          class="flex justify-center items-center mb-4"
          itemscope
          itemtype="https://schema.org/Person">
          <div class="max-w-4xl text-center px-4">
            {% if section.settings.show_author %}
              <div class="flex items-center justify-center space-x-2">
                <div class="w-8 h-8 bg-gradient-to-r from-blue-500 to-purple-600 rounded-full flex items-center justify-center">
                  <span class="text-white text-sm font-semibold">{{ article.author | slice: 0 }}</span>
                </div>
                <span class="text-gray-700 font-medium" itemprop="author">{{ article.author }}</span>
              </div>
            {% endif %}
          </div>
        </div>

      {% when 'article_published_date' %}
        <div class="flex justify-center items-center mb-8">
          <div class="max-w-4xl text-center px-4" itemprop="datePublished dateCreated">
            {% if section.settings.show_published_date %}
              <time class="text-gray-500 text-sm font-medium" datetime="{{article.published_at | date: '%Y-%m-%d'}}">{{ article.published_at | date: format: 'on_date' }}</time>
            {% endif %}
          </div>
        </div>

      {% when 'featured_image' %}
        <div class="max-w-5xl mx-auto px-4 mb-12" itemprop="image">
          {% if article.image != blank %}
            <div class="relative overflow-hidden rounded-2xl shadow-2xl">
              <img
                class="w-full h-64 md:h-80 lg:h-96 object-cover object-center transform hover:scale-105 transition-transform duration-700"
                src="{{ article.image | img_url: 'large' }}"
                loading="lazy"
                alt="{{ article.image.alt }}">
              <div class="absolute inset-0 bg-gradient-to-t from-black/20 to-transparent"></div>
            </div>
          {% else %}
            {% assign placeholder_image = 'lifestyle-2' %}
            <div class="relative overflow-hidden rounded-2xl shadow-2xl bg-gradient-to-br from-gray-100 to-gray-200">
              {{ placeholder_image | placeholder_svg_tag: 'w-full h-64 md:h-80 lg:h-96 object-cover object-center p-8 opacity-60' }}
            </div>
          {% endif %}
        </div>

      {% when 'article_content' %}
        <div class="flex justify-center items-center">
          <div class="max-w-4xl px-4" itemprop="articleBody">
            <div class="prose prose-lg prose-gray max-w-none prose-headings:text-gray-900 prose-headings:font-bold prose-p:text-gray-700 prose-p:leading-relaxed prose-a:text-blue-600 prose-a:no-underline hover:prose-a:underline prose-strong:text-gray-900 prose-blockquote:border-l-blue-500 prose-blockquote:bg-blue-50 prose-blockquote:py-4 prose-blockquote:px-6 prose-blockquote:rounded-r-lg">
              {{ article.content }}
            </div>
          </div>
        </div>
    {% endcase %}
  {% endfor %}
</article>

{% if blog.comments_enabled? %}
  <section
    id="comments"
    class="my-8"
    aria-labelledby="comments-heading">
    <div class="max-w-4xl mx-auto px-4">
      <h2 id="comments-heading" class="text-2xl font-bold mb-6">Comments</h2>
      {% if article.comments_count > 0 %}
        <div class="comments-list mb-8">
          {% paginate article.comments by 5 %}
            <div
              class="space-y-6"
              role="list"
              aria-label="User comments">
              {% for comment in article.comments %}
                <article class="p-4 border border-gray-200 rounded-lg" role="listitem">
                  <header class="mb-2">
                    <span class="font-semibold text-gray-900">{{ comment.author }}</span>
                    <time class="text-sm text-gray-500 ml-2" datetime="{{ comment.created_at | date: '%Y-%m-%d' }}">{{ comment.created_at | date: format: 'on_date' }}</time>
                  </header>
                  <div class="text-gray-700">{{ comment.content }}</div>
                </article>
              {% endfor %}
            </div>
            {% render 'pagination'
              , 
 paginate: paginate
              , 
 aria_label: 'Comment pagination navigation' %}
          {% endpaginate %}
        </div>
      {% else %}
        <p class="text-gray-500 mb-8">No comments yet. Be the first to comment!</p>
      {% endif %}

      <section class="comment-form-section" aria-labelledby="comment-form-heading">
        <h4 id="comment-form-heading" class="text-xl font-semibold mb-4">Leave a Comment</h4>
        {% form 'new_comment'
          , article %}
          {% comment %} check for success {% endcomment %}
          {% if form.errors %}
            <div class="flex form-errors mb-4 p-4 bg-red-50 border border-red-200 rounded-lg">
              <div class="mr-2">
                {% render 'icon-fail' %}
              </div>
              <div>
                <h5 class="text-red-800 font-semibold mb-2">Please correct the following errors:</h5>
                <ul class="text-red-700 text-sm list-disc list-inside">
                  {% for error in form.errors %}
                    <li>{{ error }}</li>
                  {% endfor %}
                </ul>
              </div>
            </div>
          {% elsif form.posted_successfully? %}
            <div class="flex items-center mb-4 p-4 bg-green-50 border border-green-200 rounded-lg">
              <div class="mr-2">
                {% render 'icon-success' %}
              </div>
              <p class="text-green-800">Thank you for your comment! It will be reviewed before being published.</p>
            </div>
          {% endif %}
          <div class="max-w-4xl">
            <div class="md:flex mb-4 gap-4">
              <div class="md:w-1/2 mb-4 md:mb-0">
                <label for="comment_author" class="block text-gray-700 text-sm font-semibold mb-2">Name</label>
                <input
                  type="text"
                  name="comment[author]"
                  id="comment_author"
                  value="{{ form.author }}"
                  class="w-full border border-gray-300 rounded-lg px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500"
                  placeholder="Your name"
                  required>
              </div>
              <div class="md:w-1/2">
                <label for="comment_email" class="block text-gray-700 text-sm font-semibold mb-2">Email</label>
                <input
                  type="email"
                  name="comment[email]"
                  id="comment_email"
                  value="{{ form.email }}"
                  class="w-full border border-gray-300 rounded-lg px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500"
                  placeholder="your.email@example.com"
                  required>
              </div>
            </div>
            <div class="mb-4">
              <label for="comment_content" class="block text-gray-700 text-sm font-semibold mb-2">Comment</label>
              <textarea
                name="comment[body]"
                id="comment_content"
                class="w-full border border-gray-300 rounded-lg px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500 resize-vertical"
                rows="4"
                placeholder="Write your comment here..."
                required>{{ form.body }}</textarea>
            </div>
            <div class="mb-4">
              <input
                type="submit"
                value="Post Comment"
                class="bg-blue-500 text-white font-semibold py-2 px-6 rounded-lg hover:bg-blue-600 transition-colors cursor-pointer">
            </div>
          </div>
        {% endform %}
      </section>
    </div>
  </section>
{% endif %}

{% schema %}
  {
    "name": "Template Article",
    "settings": [
      {
        "type": "checkbox",
        "id": "show_author",
        "label": "Show Author",
        "default": true
      },
      {
        "type": "checkbox",
        "id": "show_published_date",
        "label": "Show Published Date",
        "default": true
      }
    ],
    "blocks": [
      {
        "type": "article_title",
        "name": "Title",
        "limit": 1
      },
      {
        "type": "article_author",
        "name": "Author",
        "limit": 1
      },
      {
        "type": "article_published_date",
        "name": "Published Date",
        "limit": 1
      },
      {
        "type": "featured_image",
        "name": "Featured Image",
        "limit": 1
      },
      {
        "type": "article_content",
        "name": "Article Content",
        "limit": 1
      }
    ]
  }
{% endschema %}