{% if cart.item_count > 0 %}
  <div class="py-4">
    <div class="max-w-6xl mx-auto flex flex-col my-10">
      <div class="flex items-end justify-between my-5">
        <h1 class="text-3xl">Your Cart</h1>
        <a href="{{ routes.all_products_collection_url }}" class="text-blue-600 font-medium hover:text-blue-800 underline">{{ section.settings.continue_shopping }}</a>
      </div>
    </div>
    <div class="max-w-6xl flex flex-col mx-auto my-10">
      <form
        action="{{routes.cart_url}}"
        method="POST"
        class=""
        novalidate>
        <input
          type="hidden"
          name="authenticity_token"
          value="{{ authenticity_token }}">
        <table class="divide-gray-200 divide-y table-auto w-full my-4">
          <thead>
            <tr>
              <th class="px-6 py-3 text-left text-sm font-medium text-gray-500">Product</th>
              <th class="px-6 py-3 text-left text-sm font-medium text-gray-500">Quantity</th>
              <th class="px-6 py-3 text-left text-sm font-medium text-gray-500">Total Price</th>

            </tr>
          </thead>
          <tbody>
            {% for item in cart.items %}
              <tr class="table-row">
                <td class="py-4 px-2 flex flex-col justify-center">
                  <a href="{{item.url}}">
                    {% if item.image %}
                      <img
                        src="{{item.image | img_url: '80x80' }}"
                        alt="{{item.title | escape }}"
                        class="w-20 h-20 object-cover border">
                    {% else %}
                      {{ 'product' | placeholder_svg_tag: 'w-20 h-20 object-cover border' }}
                    {% endif %}
                  </a>
                </td>
                <td class="py-4 px-2 flex flex-col justify-center">
                  <a href="{{item.url}}" class="font-medium hover:text-blue-600">
                    {{ item.product.title | truncatewords: 5 }}
                  </a>
                  <span class="text-sm text-gray-600">{{ item.variant.title }}</span>
                  <a href="{{routes.cart_change_url}}?line={{forloop.index}}&quantity=0" class="text-red-600 hover:text-red-800 text-sm">Remove</a>
                </td>
                <td class="py-4 px-2">
                  <input
                    type="number"
                    name="updates[]"
                    id="updates_{{ forloop.index }}"
                    value="{{ item.quantity }}"
                    min="0"
                    class="w-20 border p-1">
                </td>
                <td class="py-4 px-2 font-medium">
                  {{ item.line_price | money }}
                </td>
              </tr>
            {% endfor %}
          </tbody>
        </table>
        <div class="flex flex-col md:flex-row justify-between items-center mt-6 pt-6 border-t border-gray-200">
          <div class="w-full m-4">
            <div class="flex flex-col items-start">
              <label for="cart_notes ">Cart Notes</label>
              <textarea
                name="note"
                id="cart_notes"
                class="w-full md:max-w-lg resize-none border p-2">{{ cart.note }}</textarea>
            </div>
          </div>
          <div class="w-full my-4 md:w-80">
            {% for block in section.blocks %}
              {% case block.type %}
                {% when 'subtotal' %}
                  <h3 class="text-lg font-medium">Subtotal: {{ cart.total_price | money }}</h3>
                {% when 'checkout_button' %}

                  <a href="{{routes.cart_url |  replace:  '/cart', '/checkout'}}" class="inline-block mt-2 bg-green-600 text-white px-8 py-2 hover:bg-green-700 focus:ring-2 focus:ring-green-400">
                    Checkout
                  </a>
                {% when 'update_button' %}
                  <div class="my-2">
                    <button
                      type="submit"
                      name="update"
                      class="bg-blue-600 text-white px-6 py-2 hover:bg-blue-700 focus:ring-2 focus:ring-blue-400 cursor-pointer">
                      Update Cart
                    </button>
                  </div>
              {% else %}

                {% endcase %}


              {% endfor %}
            </div>
          </div>
        </form>
      </div>
    </div>

  {% else %}
    <div
      class="max-w-6xl h-80 my-4 flex items-center justify-center mx-auto"
      role="main"
      aria-live="polite">
      <div class="text-center">
        <h2 class="text-3xl my-4">Your cart is empty</h2>
        <div class="py-4 my-4">
          <a
            href="{{ routes.all_products_collection_url }}"
            class="border border-gray-600 text-white bg-gray-600 px-8 py-3 hover:bg-gray-800 focus:ring-2 focus:ring-gray-400"
            aria-label="Continue shopping - browse all products">
            {{ section.settings.continue_shopping }}
          </a>
        </div>
      </div>
    </div>
  {% endif %}


  {% schema %}
    {
      "name": "Template Cart",
      "settings": [
        {
          "type": "text",
          "id": "continue_shopping",
          "label": "Continue shopping button text",
          "default": "Continue shopping",
          "info": "Text displayed on the continue shopping button"
        }
      ],
      "blocks": [
        {
          "type": "subtotal",
          "name": "Subtotal",
          "limit": 1
        },
        {
          "type": "checkout_button",
          "name": "Checkout button",
          "limit": 1
        },
        {
          "type": "update_button",
          "name": "Update button",
          "limit": 1
        }
      ]
    }
  {% endschema %}