<div class="flex flex-col my-8 item-center">
  {% if section.settings.contact_title != blank %}
    <h1 class="text-xl text-gray-500 font-medium my-3 md:my-8 text-center">{{ section.settings.contact_title }}</h1>
  {% endif %}
  {% form 'contact' %}
    {% if form.errors %}
      <div class="flex form-errors mb-4 p-4 bg-red-50 border border-red-200 rounded-lg">
        <div class="mr-2">
          {% render 'icon-fail' %}
        </div>
        <div>
          <h5 class="text-red-800 font-semibold mb-2">message not sent</h5>
          <ul class="text-red-700 text-sm list-disc list-inside">
            {% for error in form.errors %}
              <li>{{ error }}</li>
            {% endfor %}
          </ul>
        </div>
      </div>
    {% elsif form.posted_successfully? %}
      <div class="flex items-center mb-4 p-4 bg-green-50 border border-green-200 rounded-lg">
        <div class="mr-2">
          {% render 'icon-success' %}
        </div>
        <p class="text-green-800">Thank you for your message!.</p>
      </div>
    {% endif %}
    <div class="max-w-4xl mx-auto w-full px-4 ">
      <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-6">
        <div class="flex flex-col">
          <label class="uppercase text-gray-600 text-xs font-medium mb-2" for="contact_name">Name</label>
          <input
            class="w-full border border-gray-300 py-3 px-4 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent transition duration-200"
            type="text"
            id="contact_name"
            name="contact[name]"
            required>
        </div>


        <div class="flex flex-col">
          <label class="uppercase text-gray-600 text-xs font-medium mb-2" for="contact_email">Email</label>
          <input
            class="w-full border border-gray-300 py-3 px-4 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent transition duration-200"
            type="email"
            id="contact_email"
            name="contact[email]"
            required>
        </div>
      </div>

      <div class="flex flex-col mb-6">
        <label class="uppercase text-gray-600 text-xs font-medium mb-2" for="contact_message">Message</label>
        <textarea
          id="contact_message"
          name="contact[body]"
          required
          rows="6"
          class="w-full border border-gray-300 py-3 px-4 rounded-lg resize-none focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent transition duration-200"></textarea>
      </div>

      <button type="submit" class="w-full md:w-auto bg-blue-600 text-white px-8 py-3 rounded-lg font-medium hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2 transition duration-200">
        Send Message
      </button>
    </div>
  {% endform %}
</div>


{% schema %}
  {
    "name": "Contact Form",
    "settings": [
      {
        "type": "text",
        "id": "contact_title",
        "label": "Title"
      }
    ],
    "presets": [
      {
        "name": "Contact Form",
        "category": "Contact"
      }
    ]
  }
{% endschema %}